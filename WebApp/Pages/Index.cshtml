@page "{pageNumber:int?}"
@model IndexModel
@{
    ViewData["Title"] = "Últimos artículos";
}
<div class="container mt-5">
    <h4 class="mb-4 text-primary">Últimos artículos</h4>
    <!-- Lista de artículos -->
    <div class="mb-4">
        @if (Model.Articles != null && Model.Articles.Count > 0)
        {
            foreach (var article in Model.Articles)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@article.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@article.Author - @article.Date.ToString("dd/MM/yyyy HH:mm")</h6>
                        <p class="card-text">@article.Summary</p>
                        <a class="btn btn-primary float-end" asp-page="/Articles/Details" asp-route-id="@article.Id">Ver artículo</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">No hay artículos para mostrar.</div>
        }
    </div>
    <!-- Paginación -->
    <div class="d-flex justify-content-center mb-4">
        @if (Model.HasPreviousPage)
        {
            <a class="btn btn-outline-primary me-2" asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Página anterior</a>
        }
        else
        {
            <button class="btn btn-outline-secondary me-2" disabled>Página anterior</button>
        }
        
        <span class="btn btn-light me-2">Página @Model.CurrentPage de @Model.TotalPages</span>
        
        @if (Model.HasNextPage)
        {
            <a class="btn btn-outline-primary" asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Página siguiente</a>
        }
        else
        {
            <button class="btn btn-outline-secondary" disabled>Página siguiente</button>
        }
    </div>
</div>
